<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.onegoal.flashlight.app.MainActivity"
    android:background="@android:color/background_dark">

    <com.triggertrap.seekarc.SeekArc
        android:id="@+id/seekArc"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        app:rotation="180"
        app:startAngle="30"
        app:sweepAngle="300"
        app:touchInside="true"
        app:arcWidth="2dp"
        app:arcColor="@color/dark_red"
        app:progressColor="@color/bright_blue"
        app:thumb="@color/light_blue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flashlight_off"
        android:id="@+id/flashlight_img"
        android:layout_centerVertical="true"
        android:paddingTop="30dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
